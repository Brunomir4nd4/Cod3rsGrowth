<mvc:View xmlns:tnt="sap.tnt"
    controllerName="coders-growth.app.ingrediente.DetalhesIngrediente"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:semantic="sap.f.semantic"
    xmlns:core="sap.ui.core">

    <Page binding="{ingrediente>/}" id="paginaDeDetalhes" showHeader="false" class="sapUiSmallMarginTop">
        <Panel>
            <Toolbar>
                <content>
					<Select type="IconOnly" icon="sap-icon://menu2" id="selectItensFilho" change="aoClicarApresentarListagemFilhoRequerido">
						<items>
							<core:Item key="Receita" text="Reiceita" />
							<core:Item key="Poção" text="Poção" />
						</items>
					</Select>
					<Button icon="sap-icon://navigation-left-arrow" press="onNavBack" id="botaoVoltarPagina" />
                    <Title text="{i18n>DetalhesIngrediente.Detalhes}" level="H2" id="tituloDeDetalhes" />
                    <ToolbarSpacer />
                    <Button icon="sap-icon://edit" text="Editar" press="aoClicarIrParaCadastroParaEditar" id="botaoEditar" />
                    <Button icon="sap-icon://delete" press="aoClicarremover" id="botaoRemover" />
                </content>
            </Toolbar>
            <VBox class="sapUiMediumMarginTop">
				<semantic:SemanticPage toggleHeaderOnTitleClick="false" headerPinnable="false" >
                    <semantic:titleHeading>
                        <Title text="{ingrediente>nome}" id="tituloNomeDoIngrediente" />
                    </semantic:titleHeading>
                    <semantic:headerContent>
                        <FlexBox alignItems="Start" justifyContent="SpaceBetween">
                            <Panel backgroundDesign="Transparent">
                                <ObjectAttribute title="{i18n>DetalhesIngrediente.ID}" text="{ingrediente>id}" />
                                <ObjectAttribute title="{i18n>DetalhesIngrediente.Nome}" text="{ingrediente>nome}" />
                                <ObjectAttribute title="{i18n>DetalhesIngrediente.Naturalidade}" text="{path: 'ingrediente>naturalidade', formatter: '.formatter.formatarValorInteiroDoEnum'}" />
                            </Panel>
                            <Panel>
                                <ObjectNumber id="objectHeader" unit="{i18n>DetalhesIngrediente.Unidades}" textAlign="End" state="{path: 'ingrediente>quantidade', formatter: '.formatter.quantityState'}" number="{ingrediente>quantidade}">
                                </ObjectNumber>
                                <ProgressIndicator width="300px" percentValue="{ingrediente>quantidade}" displayValue="{ingrediente>quantidade}" showValue="true" state="{path: 'ingrediente>quantidade', formatter: '.formatter.quantityState'}">
                                </ProgressIndicator>
                            </Panel>
                        </FlexBox>
						<HBox class="sapUiLargeMarginTop">
							<VBox id="VBoxTabelaReceita">
								<Table id="tabelaReceita" inset="false" items="{receita>/}">
									<headerToolbar>
										<Toolbar>
											<Title id="tituloTabelaReceita" text="{i18n>Listagem.Ingredientes}"/>
											<ToolbarSpacer />
											<SearchField width="20%" search=""/>
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column>
											<Text text="Name"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Validade Em Meses"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Valor"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem vAlign="Middle">
											<cells>
												<ObjectIdentifier text="{receita>nome}"/>
												<Text text="{receita>validadeEmMeses}"/>
												<Text text="{receita>valor}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
							<VBox id="VBoxTabelaPocao" visible="false">
								<Table id="tabelaPocao" inset="false" items="{pocao>/}">
									<headerToolbar>
										<Toolbar>
											<Title id="tituloTabelaPocao" text="{i18n>Listagem.Ingredientes}"/>
											<ToolbarSpacer />
											<SearchField width="20%" search=".onFilterInvoices"/>
										</Toolbar>
									</headerToolbar>
									<columns>
										<Column>
											<Text text="Nome"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Data Frabricação"/>
										</Column>
										<Column minScreenWidth="Tablet" demandPopin="true">
											<Text text="Vencido"/>
										</Column>
									</columns>
									<items>
										<ColumnListItem vAlign="Middle">
											<cells>
												<ObjectIdentifier title="{pocao>nome}"/>
												<Text text="{pocao>dataDeFabricacao}"/>
												<Text text="{pocao>vencido}"/>
											</cells>
										</ColumnListItem>
									</items>
								</Table>
							</VBox>
						</HBox>
						<VBox alignItems="End">
							<Toolbar class="footerToolbar" style="Clear">
								<Button press="aoClicarIrParaCadastro" id="botaoRemoverFilho" text="Remover" />
								<Button press="aoClicarIrParaCadastro" id="botaoEditarFilho" text="Editar" class="sapUiSmallMarginBeginEnd" />
								<Button press="aoClicarIrParaCadastro" id="botaoAdicionarFilho" text="Adicionar" />
							</Toolbar>
						</VBox>
                    </semantic:headerContent>
                </semantic:SemanticPage>
            </VBox>
        </Panel>
    </Page>
</mvc:View>