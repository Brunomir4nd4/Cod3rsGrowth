<mvc:View
    controllerName="coders-growth.app.ingrediente.DetalhesIngrediente"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:wt="ui5.walkthrough.control"
	xmlns:semantic="sap.f.semantic"
	xmlns:l="sap.ui.layout" >

	<Page
		binding="{ingrediente>/}"
		id="paginaDeDetalhes"
		showHeader="false" >

		<content>
			<Toolbar>
				<content>
					<Button icon="sap-icon://navigation-left-arrow" press="onNavBack" id="botaoVoltarPagina" />
					<Title text="{i18n>DetalhesIngrediente.Detalhes}" level="H2" id="tituloDeDetalhes" />
					<ToolbarSpacer />
					<Button icon="sap-icon://edit" text="Editar" press="aoClicarIrParaCadastroParaEditar" id="botaoEditar" />
					<Button icon="sap-icon://delete" press="aoClicarremover" id="botaoRemover" />
				</content>
			</Toolbar>
		</content>

		<semantic:SemanticPage toggleHeaderOnTitleClick="false" preserveHeaderStateOnScroll ="true" >
			<semantic:titleHeading>
				<Title text="{ingrediente>nome}" id="tituloNomeDoIngrediente" />
			</semantic:titleHeading>
			<semantic:headerContent>
				<FlexBox
					alignItems="Start"
					justifyContent="SpaceBetween">
					<Panel backgroundDesign="Transparent">
						<ObjectAttribute 
							title="{i18n>DetalhesIngrediente.ID}"
							text="{ingrediente>id}" />
						<ObjectAttribute
							title="{i18n>DetalhesIngrediente.Nome}"
							text="{ingrediente>nome}"/>
						<ObjectAttribute
							title="{i18n>DetalhesIngrediente.Naturalidade}"
							text="{
								path: 'ingrediente>naturalidade',
								formatter: '.formatter.formatarValorInteiroDoEnum'
							}" />
					</Panel>
					<Panel backgroundDesign="Transparent">
						<ObjectNumber
							id="objectHeader"
							unit="{i18n>DetalhesIngrediente.Unidades}"
							textAlign="End"
							state="{
								path: 'ingrediente>quantidade',
								formatter: '.formatter.quantityState'}"
							number="{ingrediente>quantidade}" >
						</ObjectNumber>
						<ProgressIndicator
							width="300px"
							percentValue="{ingrediente>quantidade}"
							displayValue="{ingrediente>quantidade}"
							showValue="true"
							state="{
								path: 'ingrediente>quantidade',
								formatter: '.formatter.quantityState'}" />
					</Panel>
				</FlexBox>
			</semantic:headerContent>
		</semantic:SemanticPage>
	</Page>
</mvc:View>