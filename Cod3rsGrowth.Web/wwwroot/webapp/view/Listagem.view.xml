<mvc:View
    controllerName="coders-growth.controller.Listagem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page title="{i18n>Listagem.Listagem}" class="sapUiResponsiveContentPadding">
        <Table
            id="tabelaIngrediente"
            width="auto"
            items="{ path: 'ingrediente>/'}">

            <headerToolbar>
                <Toolbar>
                    <Title id="tableHeader" text="Texto 1"/>
                    <ToolbarSpacer />
                    <SearchField
                        id="searchField"
                        tooltip="{Texto 2}"
                        search=".onSearch"
                        width="auto">
                    </SearchField>
                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Text text="ID" />
                </Column>
                <Column>
                    <Text text="Nome" />
                </Column>
                <Column>
                    <Text text="Quantidade" />
                </Column>
                <Column>
                    <Text text="Naturalidade" />
                </Column>
            </columns>

            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Text text="{ingrediente>id}" />
                        <Text text="{ingrediente>nome}" />
                        <Text text="{ingrediente>quantidade}" />
                        <Text text="{ingrediente>naturalidade}" />
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Page>

</mvc:View>
