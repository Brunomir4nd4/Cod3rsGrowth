<mvc:View
    controllerName="coders-growth.controller.Listagem"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">

    <Page title="{i18n>Listagem.Listagem}" class="sapUiResponsiveContentPadding" showHeader="false" >
        <Table
            id="tabelaIngrediente"
            width="auto"
            items="{ path: 'ingrediente>/'}">

            <headerToolbar>
                <Toolbar>
                    <Title id="tableHeader" text="Ingredientes"/>
                    <ToolbarSpacer />

                    <Input id="filtroNome" type="Text" width="auto" liveChange="aoAlterarFiltrar" placeholder="Nome..."/>
                    <Input id="filtroQuantidade" type="Text" width="auto" liveChange="aoAlterarFiltrar" placeholder="Quantidade..."/>
                    <SegmentedButton class="sapUiTinyMargin" id="filtroNaturalidade" selectionChange="aoAlterarFiltrar">
                        <items>
                            <SegmentedButtonItem text="Todos" id="botaoTodos" />
                            <SegmentedButtonItem text="OverWorld" id="botaoOverWorld" />
                            <SegmentedButtonItem text="Nether" id="botaoNether" />
                            <SegmentedButtonItem text="TheEnd" id="botaoTheEnd" />
                        </items>
                    </SegmentedButton>

                </Toolbar>
            </headerToolbar>

            <columns>
                <Column>
                    <Text text="ID" />
                </Column>
                <Column>
                    <Text text="Nome" />
                </Column>
                <Column>
                    <Text text="Quantidade" />
                </Column>
                <Column>
                    <Text text="Naturalidade" />
                </Column>
            </columns>

            <items>
                <ColumnListItem vAlign="Middle">
                    <cells id="celulasDaTabelaIngredientes">
                        <Text text="{ingrediente>id}" />
                        <Text text="{ingrediente>nome}" />
                        <Text text="{ingrediente>quantidade}" />
                        <Text text="{
                            path: 'ingrediente>naturalidade',
                            formatter: '.formatter.formatarEnum'
                        }" />
                    </cells>
                </ColumnListItem>
            </items>

        </Table>
    </Page>

</mvc:View>
